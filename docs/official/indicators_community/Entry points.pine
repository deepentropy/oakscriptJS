study("Entry points", overlay=true)r=input(100, title="Period", type=integer, minval=1)b=ema(close,r)buy=close>b and low<=b and open>b or open<b and close>bsell=close<b and high>=b and open<b or open>b and close<bplotshape(buy, color=green, location=location.belowbar, style=shape.arrowup, transp=10, text="Buy")plotshape(sell, color=red, location=location.abovebar, style=shape.arrowdown, transp=10, text="Sell")