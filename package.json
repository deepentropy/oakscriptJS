{
  "name": "@deepentropy/oakscriptjs",
  "version": "0.1.2",
  "type": "module",
  "description": "JavaScript mirror of the PineScript API with exact same signatures",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "babel-plugin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:cjs && npm run build:types",
    "build:esm": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.mjs --platform=neutral --external:@types/*",
    "build:cjs": "esbuild src/index.ts --bundle --format=cjs --outfile=dist/index.js --platform=neutral --external:@types/*",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "version:patch": "node scripts/bump-version.cjs patch",
    "version:minor": "node scripts/bump-version.cjs minor",
    "version:major": "node scripts/bump-version.cjs major",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "pinescript",
    "trading",
    "technical-analysis",
    "indicators",
    "charting",
    "oakscript",
    "ta",
    "finance",
    "stocks",
    "crypto"
  ],
  "author": "OdyssÃ©e",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deepentropy/oakscriptJS.git"
  },
  "bugs": {
    "url": "https://github.com/deepentropy/oakscriptJS/issues"
  },
  "homepage": "https://github.com/deepentropy/oakscriptJS#readme",
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
